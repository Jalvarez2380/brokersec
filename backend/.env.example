# ============================================
# BROKERSEC BACKEND - Variables de Entorno
# ============================================

# Puerto del servidor
PORT=3001

# Base de datos PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/brokersec"

# JWT Secret (generar uno seguro en producci칩n)
JWT_SECRET="brokersec-super-secret-key-2025-change-in-production"
JWT_EXPIRE="7d"

# Encriptaci칩n de contrase침as
BCRYPT_SALT_ROUNDS=10

# ============================================
# API EXTERNA - OpenWeatherMap
# ============================================
# Obtener gratis en: https://openweathermap.org/api
OPENWEATHER_API_KEY="TU_API_KEY_AQUI"
OPENWEATHER_BASE_URL="https://api.openweathermap.org/data/2.5"

# ============================================
# Seguridad
# ============================================
# Habilitar en producci칩n
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
